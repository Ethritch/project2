@{
    ViewData["Title"] = "Sign up for Appointment";
}

@model List<Time>

<a class="btn btn-secondary">Previous Day</a>
<a class="btn btn-secondary">Next Day</a>

<p>This is where the date will go</p>


<h2>Please select a time for your appointment:</h2>
<h4>Morning Availability</h4>

@foreach (var x in Model)
{
  if (x.taken == false)
  {
    <a asp-controller="Home" asp-action="AddAppointment" asp-route-id="@x.TimeId" class="btn btn-primary">@x.AppointmentTime.ToString("hh:mm tt")</a>
  }  
}

